{
	"name": "wp-starter-plugin",
	"version": "0.0.1",
	"description": "Starter multi-block plugin with Tailwind CSS.",
	"author": "Troy Chaplin",
	"license": "GPL-2.0-or-later",
	"main": "build/index.js",
	"scripts": {
		"build": "yarn format && yarn lint && yarn build:wp && yarn build:css && yarn size",
		"build:wp": "wp-scripts build --webpack-copy-php",
		"build:css": "tailwindcss -i ./src/styles/tailwind.css -o ./build/styles/editor.css --postcss --minify",
		"start": "concurrently 'yarn start:wp' 'yarn start:css'",
		"start:wp": "wp-scripts start --webpack-copy-php",
		"start:css": "tailwindcss -i ./src/styles/tailwind.css -o ./build/styles/editor.css --postcss --minify --watch",
		"format": "wp-scripts format ./src --fix",
		"lint": "wp-scripts lint-js ./src",
		"lint:fix": "wp-scripts lint-js ./src --fix",
		"size": "size-limit",
		"clean": "rm -rf node_modules ; yarn install --frozen-lockfile ; yarn build"
	},
	"devDependencies": {
		"@prettier/plugin-php": "^0.19.4",
		"@size-limit/esbuild": "^8.2.4",
		"@size-limit/esbuild-why": "^8.2.4",
		"@size-limit/file": "^8.2.4",
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/forms": "^0.5.3",
		"@tailwindcss/typography": "^0.5.9",
		"@wordpress/block-editor": "^12.1.0",
		"@wordpress/blocks": "^12.10.0",
		"@wordpress/components": "^24.0.0",
		"@wordpress/core-data": "^6.10.0",
		"@wordpress/data": "^9.3.0",
		"@wordpress/date": "^4.33.0",
		"@wordpress/edit-post": "^7.10.0",
		"@wordpress/element": "^5.10.0",
		"@wordpress/eslint-plugin": "^14.6.0",
    "@wordpress/icons": "^9.23.0",
		"@wordpress/plugins": "^6.1.0",
		"@wordpress/prettier-config": "^2.16.0",
		"@wordpress/scripts": "^26.4.0",
		"autoprefixer": "^10.4.14",
		"concurrently": "^8.0.1",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-import": "^2.27.5",
		"lint-staged": "^13.2.2",
		"postcss": "^8.4.23",
		"postcss-import": "^15.1.0",
		"postcss-nested": "^6.0.1",
		"postcss-prefix-selector": "^1.16.0",
		"prettier": "^2.8.8",
		"size-limit": "^8.2.4",
		"stylelint": "^15.6.1",
		"tailwindcss": "^3.3.2"
	}
}
